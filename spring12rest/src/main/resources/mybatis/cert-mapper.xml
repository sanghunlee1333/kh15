<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cert">
	<insert id="add">
		insert into cert(cert_email, cert_number) values(#{certEmail}, #{certNumber})
	</insert>
	<update id="update">
		update cert
		set cert_number = #{certNumber}, cert_time = systimestamp, cert_confirm = null
		where cert_email = #{certEmail}
	</update>
	<delete id="delete">
		delete cert where cert_email = #{certEmail}
	</delete>
	<select id="find" resultType="CertDto">
		select * from cert where cert_email = #{certEmail}
	</select>
	<update id="confirm">
		update cert
		set cert_confirm = systimestamp
		where cert_email = #{certEmail}
	</update>
</mapper>  